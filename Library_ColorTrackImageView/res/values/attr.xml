<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text_origin_color" format="color" />
    <attr name="text_change_color" format="color" />
    <attr name="icon" format="reference" />
    <attr name="progress" format="float" />
    <attr name="scale" format="float" />
    <attr name="direction">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
    <attr name="scale_type">
        <enum name="fit_center" value="0" />
        <enum name="fit_xy" value="1" />
    </attr>

    <declare-styleable name="ColorTrackImageView">
        <attr name="text_origin_color" />
        <attr name="text_change_color" />
        <attr name="progress" />
        <attr name="direction" />
        <attr name="icon" />
        <attr name="scale"></attr>
        <attr name="scale_type"></attr>
    </declare-styleable>

</resources>